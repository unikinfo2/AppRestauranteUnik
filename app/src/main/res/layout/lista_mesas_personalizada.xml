<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagemMesa"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_mesalivre"
        tools:src="@mipmap/ic_mesalivre"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numMesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Nr.Mesa"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/descMesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Descricao Mesa"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/statusMesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Situação"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>